{
	"info": {
		"_postman_id": "address-info-api-collection-001",
		"name": "Address Info",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json",
		"_exporter_id": "23389172",
		"description": "FluentCart Address Info API collection for retrieving country and address-related information"
	},
	"item": [
		{
			"name": "Get Countries Options",
			"request": {
				"auth": {
					"type": "basic",
					"basic": {
						"password": "{{password}}",
						"username": "{{username}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/wp-json/fluent-cart/v2/address-info/countries",
					"host": ["{{base_url}}"],
					"path": ["wp-json", "fluent-cart", "v2", "address-info", "countries"]
				},
				"description": "Retrieve a list of all available countries as options."
			},
			"response": []
		},
		{
			"name": "Get Country Info",
			"request": {
				"auth": {
					"type": "basic",
					"basic": {
						"password": "{{password}}",
						"username": "{{username}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/wp-json/fluent-cart/v2/address-info/get-country-info?country_code=US",
					"host": ["{{base_url}}"],
					"path": ["wp-json", "fluent-cart", "v2", "address-info", "get-country-info"],
					"query": [
						{
							"key": "country_code",
							"value": "US"
						},
						{
							"key": "timezone",
							"value": "",
							"disabled": true
						}
					]
				},
				"description": "Retrieve detailed information about a specific country including states/provinces and address locale."
			},
			"response": []
		}
	],
	"variable": []
}

