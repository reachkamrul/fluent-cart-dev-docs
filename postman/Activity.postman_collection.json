{
	"info": {
		"_postman_id": "activity-api-collection-001",
		"name": "Activity",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json",
		"_exporter_id": "23389172",
		"description": "FluentCart Activity API collection for managing activity logs"
	},
	"item": [
		{
			"name": "List Activities",
			"request": {
				"auth": {
					"type": "basic",
					"basic": {
						"password": "{{password}}",
						"username": "{{username}}"
					}
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/wp-json/fluent-cart/v2/activity/?per_page=10&page=1",
					"host": ["{{base_url}}"],
					"path": ["wp-json", "fluent-cart", "v2", "activity", ""],
					"query": [
						{
							"key": "search",
							"value": "",
							"disabled": true
						},
						{
							"key": "per_page",
							"value": "10"
						},
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "log_type",
							"value": "",
							"disabled": true
						},
						{
							"key": "module_name",
							"value": "",
							"disabled": true
						},
						{
							"key": "module_id",
							"value": "",
							"disabled": true
						}
					]
				},
				"description": "Retrieve a paginated list of activity logs."
			},
			"response": []
		},
		{
			"name": "Delete Activity",
			"request": {
				"auth": {
					"type": "basic",
					"basic": {
						"password": "{{password}}",
						"username": "{{username}}"
					}
				},
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/wp-json/fluent-cart/v2/activity/{{activity_id}}",
					"host": ["{{base_url}}"],
					"path": ["wp-json", "fluent-cart", "v2", "activity", "{{activity_id}}"]
				},
				"description": "Delete a specific activity log entry."
			},
			"response": []
		},
		{
			"name": "Mark Activity as Read/Unread",
			"request": {
				"auth": {
					"type": "basic",
					"basic": {
						"password": "{{password}}",
						"username": "{{username}}"
					}
				},
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"status\": \"read\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/wp-json/fluent-cart/v2/activity/{{activity_id}}/mark-read",
					"host": ["{{base_url}}"],
					"path": ["wp-json", "fluent-cart", "v2", "activity", "{{activity_id}}", "mark-read"]
				},
				"description": "Update the read status of an activity log entry."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "activity_id",
			"value": "1",
			"type": "string"
		}
	]
}

